---
interface Props {
	title: string;
	description: string;
	keywords: string;
	canonicalURL: string;
	robots: string;
}

const { title, description, keywords, canonicalURL, robots } = Astro.props;

// COMPONENTS
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<!-- FAVICON -->
		<link rel="icon" type="image/png" href="/seo/icon.png" />
		<link rel="apple-touch-icon" href="/seo/icon.png" />
		<!-- THEME COLOR -->
		<meta name="theme-color" content="#800080" />
		<style>
			@keyframes fadeInOut {
				0%, 100% { opacity: 0.2; transform: translateY(10px); }
				50% { opacity: 0.8; transform: translateY(0); }
			}
			.fade-in-out {
				animation: fadeInOut 4s ease-in-out infinite;
			}
		</style>
		<!-- GENERIC METADATA -->
		<meta name="author" content="" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<!-- CANONICAL URL -->
		<link rel="canonical" href={canonicalURL} />
		<!-- ROBOTS -->
		<meta name="robots" content={robots} />
		<!-- OPENGRAPH TAGS (SOCIAL MEDIA) -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:image" content="/seo/banner.png" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:image:type" content="image/png" />
		<meta property="og:site_name" content="" />
		<!-- TWITTER/X CARD DATA -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content="/seo/banner.png" />
		<meta name="twitter:image:alt" content={title} />
		<!-- TELEGRAM/DISCORD/FACEBOOK SHARING -->
		<meta property="og:locale" content="en_US" />
		<meta name="theme-color" content="#000000" />
		<!-- GOOGLE MATERIAL ICONS -->
		<link
			href="https://fonts.googleapis.com/icon?family=Material+Icons"
			rel="stylesheet"
		/>
		<!-- SUPABASE CLIENT -->
		<script src="https://unpkg.com/@supabase/supabase-js@2"></script>
		<!-- TITLE -->
		<title>{title}</title>
	</head>
	<body class="bg-[#ff980d] ">
		<!-- NAVIGATION BAR -->
		<!-- <Nav /> -->
		<slot />
		<!-- SITE FOOTER -->
		<!-- <Footer /> -->
		<style is:global>
			/* CUSTOM FONTS */
			@font-face {
				font-family: 'Yeezy';
				src: url('/font/yeezy.ttf') format('truetype');
				font-weight: normal;
				font-style: normal;
			}

			@font-face {
				font-family: 'FSEX302';
				src: url('/font/FSEX302.ttf') format('truetype');
				font-weight: normal;
				font-style: normal;
			}

			/* GOOGLE FONTS */

			html {
				font-family: "FSEX302", "Open Sans", sans-serif;
				@apply text-slate-900;
				@apply bg-cover;
			}

			h1 {
				@apply text-5xl tracking-tight font-black text-purple-900; 
			}

			p, a {
				@apply text-lg;
			}

			li {
				@apply font-semibold;
			}

			a {
				@apply text-sky-500 font-medium hover:underline underline-offset-4 break-words;
			}

		</style>
	</body>
</html>